{
  "name": "your-app-name",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run --filter @your-app-name/backend dev\" \"bun run --filter @your-app-name/frontend dev\"",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "prisma:dev": "bunx prisma migrate dev --schema apps/backend/prisma/schema.prisma"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/bun": "latest",
    "concurrently": "^9.2.1"
  }
}
